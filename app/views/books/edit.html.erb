<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <h2><%= pluralize(@book.errors.count, "error") %> errors prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with model:@book, local: true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <div><%= f.submit 'Update Book' %></div>
  </%>
  <%= link_to "Show", book_path(@book.id) %>
  <%= link_to "Back", "/books" %>
  
<% end %>